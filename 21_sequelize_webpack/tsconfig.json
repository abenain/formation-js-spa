{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*"]
}